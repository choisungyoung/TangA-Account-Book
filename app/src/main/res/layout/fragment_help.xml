<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tanga.sungyoung.testproject1.fragment.HelpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="도움말"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:textStyle="bold" />

        <androidx.cardview.widget.CardView
                android:id="@+id/inputCardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0"
                app:cardCornerRadius="10dp">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="1. 추가"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:paddingLeft="20sp"
                        android:paddingBottom="20sp"
                        android:text="일별 내열 보기에서 계정명, 지출/수입 선택, 금액 입력 후 입력버튼을 클릭!"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="2. 삭제"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20sp"
                        android:paddingBottom="20sp"
                        android:layout_margin="10dp"
                        android:text="일별 내열 보기에서 항목을 길게 누르기"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="3. 수정"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20sp"
                        android:paddingBottom="20sp"
                        android:layout_margin="10dp"
                        android:text="향후 개발 예정. 지금은 불가능.. \n삭제하고 다시 추가!"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="4. 날짜 변경"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20sp"
                        android:paddingBottom="20sp"
                        android:layout_margin="10dp"
                        android:text="날짜를 클릭!"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="5. 다이어리"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20sp"
                        android:paddingBottom="20sp"
                        android:layout_margin="10dp"
                        android:text="메모 작성시 자동 저장됨\n검색시 오늘을 기준으로 가까운 순으로 탐색됨"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="6. 데이터 이동"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20sp"
                        android:paddingBottom="20sp"
                        android:layout_margin="10dp"
                        android:text="1. 사이드바의 '데이터 내보내기' \n2.바뀐 폰의 앱 실행 후 '데이터 불러오기' \n3. 붙여넣고 덮어쓰기!\n**데이터 변경 되지 않도록 유의**"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="7. 자동완성"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20sp"
                        android:paddingBottom="20sp"
                        android:layout_margin="10sp"
                        android:text="데이터 추가시 자동완성에 나옴!"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="8. 장애 발생 시"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20sp"
                        android:paddingBottom="20sp"
                        android:layout_margin="10sp"
                        android:text="1.앱 강제종료 후 재실행\n2.휴대폰 재부팅 \n3.그래도 안될 시  tjddud117@naver.com으로 문의주세요.."
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>