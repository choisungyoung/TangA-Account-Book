<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCardView"
        tools:context=".activity.AccountBookActivity">

    <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <FrameLayout
                android:id="@+id/accountFragment"
                android:name="com.example.sungyoung.testproject1.fragment.TodayFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:background="#ededed">

            <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:text="보기"
                    android:textColor="@color/colorBlack"
                    android:textSize="24dp"
                    android:textStyle="bold" />

            <ListView
                    android:id="@+id/drawer_menulist"
                    android:layout_width="200dp"
                    android:layout_height="0dp"
                    android:divider="#ededed"
                    android:dividerHeight="0dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_weight="2"></ListView>
            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:text="설정"
                    android:textSize="24dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />
            <ListView
                    android:id="@+id/drawer_settinglist"
                    android:layout_width="200dp"
                    android:layout_height="0dp"
                    android:divider="#ededed"
                    android:dividerHeight="0dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_weight="1"></ListView>

        </LinearLayout>


    </android.support.v4.widget.DrawerLayout>

    <ImageView
            android:id="@+id/slidImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/actionModeCloseDrawable" />
</android.support.constraint.ConstraintLayout>

